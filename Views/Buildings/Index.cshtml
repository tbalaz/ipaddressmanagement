@model IPAddressManagement.Models.Building

@{
    Layout = "_Layout";
    ViewData["Title"] = "Add Device";
}

<h1>Create Building</h1>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfFloors"></label>
        <input asp-for="NumberOfFloors" class="form-control" />
        <span asp-validation-for="NumberOfFloors" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfRooms"></label>
        <input asp-for="NumberOfRooms" class="form-control" />
        <span asp-validation-for="NumberOfRooms" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShortName">Short Name</label>
        <input asp-for="ShortName" class="form-control" />
        <span asp-validation-for="ShortName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
