@using IPAddressManagement.Models
@model IEnumerable<IPAddressManagement.Models.Building>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Buildings Management";
}

<div class="content-container">
    <main role="main">
        <h1 class="display-4 mb-4">Buildings Management</h1>

        <!-- Add New Building Button -->
        <div class="mb-3">
            <a asp-action="Create" asp-controller="AddBuildings" class="btn btn-primary">Add New Building</a>
        </div>

        <!-- Summary Cards and Search (Optional) -->
        <div class="row mb-4 align-items-center">
            <div class="col-md-8">
                <div class="row g-2">
                    <!-- All Buildings Card -->
                    <div class="col-md-4">
                        <a href="@Url.Action("Index", new { searchString = ViewBag.SearchString, sortOrder = ViewBag.CurrentSort })" class="text-decoration-none">
                            <div class="card text-white bg-secondary" style="height: 38px;">
                                <div class="card-body d-flex align-items-center p-2">
                                    <h5 class="card-title mb-0">All: @ViewBag.TotalBuildings</h5>
                                </div>
                            </div>
                        </a>
                    </div>
                    <!-- You can add more summary cards if desired -->
                </div>
            </div>

            <!-- Search Box -->
            <div class="col-md-4">
                <form method="get" action="@Url.Action("Index")">
                    <div class="input-group" style="height: 38px;">
                        <input type="text" 
                               name="searchString" 
                               class="form-control" 
                               placeholder="Search buildings..."
                               value="@ViewBag.SearchString">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Buildings Table -->
        <div class="card mb-4">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Floors</th>
                                <th>Rooms</th>
                                <th>Short Name</th>
                                <th>Last Updated</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var building in Model)
                            {
                                <tr>
                                    <td>@building.Name</td>
                                    <td>@building.FullAddress</td>
                                    <td>@building.FloorRange</td>
                                    <td>@building.NumberOfRooms</td>
                                    <td>@building.ShortName</td>
                                    <td>@building.UpdatedAt</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Pagination (Optional) -->
        @if(ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i, sortOrder = ViewBag.CurrentSort, searchString = ViewBag.SearchString })">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </main>
</div>

<style>
    .table-hover tbody tr:hover { background-color: #f8f9fa; }
    .card-body { padding: 0.5rem; }
    .input-group { height: 38px; }
    .form-control { height: 100%; }
    .btn-primary { height: 100%; }
</style>
