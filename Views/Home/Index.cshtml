@{
    Layout = "_Layout";
    ViewData["Title"] = "Home";
}

<style>
    .nav-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 200px; /* Set a fixed width */
        height: 150px; /* Set a fixed height */
        padding: 1rem;
        margin: 1rem;
        border: 2px solid #007bff; /* Blue border */
        border-radius: 5px;
        text-align: center;
        text-decoration: none;
        color: #007bff;
        transition: all 0.3s ease;
    }

    .nav-card:hover {
        background-color: rgba(0, 123, 255, 0.1);
        transform: translateY(-2px);
    }

    .nav-card i {
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .nav-card h3 {
        margin: 0;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }
</style>

<div class="content-container">
    <div class="welcome-message">
        <h3>Welcome, @User.Identity.Name</h3>
    </div>
    <div class="row">
        <!-- Dashboard -->
        <a href="/Dashboard" class="nav-card">
            <i class="fas fa-tachometer-alt"></i>
            <h3>Dashboard</h3>
        </a>

        <!-- Devices -->
        <a href="/Devices" class="nav-card">
            <i class="fas fa-laptop"></i>
            <h3>Devices</h3>
        </a>

        <!-- Buildings -->
        <a href="/Buildings" class="nav-card">
            <i class="fas fa-building"></i>
            <h3>Buildings</h3>
        </a>

        <!-- Locations -->
        <a href="/Locations" class="nav-card">
            <i class="fas fa-map-marker-alt"></i>
            <h3>Locations</h3>
        </a>

        <!-- Networks -->
        <a href="/Networks" class="nav-card">
            <i class="fas fa-network-wired"></i>
            <h3>Networks</h3>
        </a>

        <!-- Users -->
        <a href="/AddUser" class="nav-card">
            <i class="fas fa-user-plus"></i>
            <h3>Users</h3>
        </a>

        <!-- Permissions -->
        <a href="/Permissions" class="nav-card">
            <i class="fas fa-shield-alt"></i>
            <h3>Permissions</h3>
        </a>
        <a href="/Permissions" class="nav-card">
            <i class="fa-solid fa-gear"></i>
            <h3>Settings</h3>
        </a>
    </div>
</div>