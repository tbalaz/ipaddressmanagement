@model IPAddressManagement.Models.Building

@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Building";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Name" class="font-weight-bold"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="CityName" class="font-weight-bold"></label>
                        <input asp-for="CityName" class="form-control" />
                        <span asp-validation-for="CityName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="StreetName" class="font-weight-bold"></label>
                        <input asp-for="StreetName" class="form-control" />
                        <span asp-validation-for="StreetName" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="StreetNumber" class="font-weight-bold"></label>
                        <input asp-for="StreetNumber" class="form-control" />
                        <span asp-validation-for="StreetNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="LowestFloor" class="font-weight-bold"></label>
                        <input asp-for="LowestFloor" class="form-control" />
                        <span asp-validation-for="LowestFloor" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="HighestFloor" class="font-weight-bold"></label>
                        <input asp-for="HighestFloor" class="form-control" />
                        <span asp-validation-for="HighestFloor" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="NumberOfRooms" class="font-weight-bold"></label>
                        <input asp-for="NumberOfRooms" class="form-control" />
                        <span asp-validation-for="NumberOfRooms" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="ShortName" class="font-weight-bold"></label>
                        <input asp-for="ShortName" class="form-control" />
                        <span asp-validation-for="ShortName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-12 text-center">
                        <button type="submit" class="btn btn-success btn-lg mr-2">Add Building</button>
                        <a asp-action="Index" asp-controller="Buildings" class="btn btn-secondary btn-lg">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
