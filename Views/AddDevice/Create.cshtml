@model IPAddressManagement.Models.Device

@{
    Layout = "_Layout";
    ViewData["Title"] = "Add Device";
}

<div class="content-container">
    <div class="container mt-5">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h2>@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Hostname" class="font-weight-bold"></label>
                            <input asp-for="Hostname" class="form-control" />
                            <span asp-validation-for="Hostname" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="IPAddress" class="font-weight-bold"></label>
                            <input asp-for="IPAddress" class="form-control" />
                            <span asp-validation-for="IPAddress" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Status" class="font-weight-bold"></label>
                            <select asp-for="Status" class="form-control">
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                                <option value="Maintenance">Maintenance</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="Department" class="font-weight-bold"></label>
                            <input asp-for="Department" class="form-control" />
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="EquipmentType" class="font-weight-bold"></label>
                            <input asp-for="EquipmentType" class="form-control" />
                            <span asp-validation-for="EquipmentType" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="Criticality" class="font-weight-bold"></label>
                            <select asp-for="Criticality" class="form-control">
                                <option value="High">High</option>
                                <option value="Medium">Medium</option>
                                <option value="Low">Low</option>
                            </select>
                            <span asp-validation-for="Criticality" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="MACAddress" class="font-weight-bold"></label>
                            <input asp-for="MACAddress" class="form-control" />
                            <span asp-validation-for="MACAddress" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="BuildingId" class="font-weight-bold">Building</label>
                            @if (Model.BuildingId != 0)
                            {
                                <input type="text" class="form-control" value="@Model.Building.Name" readonly />
                                <input type="hidden" asp-for="BuildingId" />
                            }
                            else
                            {
                                <select asp-for="BuildingId" asp-items="ViewBag.Buildings" class="form-control"></select>
                            }
                            <span asp-validation-for="BuildingId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Floor" class="font-weight-bold"></label>
                            <input asp-for="Floor" type="number" class="form-control" min="-10" max="40"/>
                            <span asp-validation-for="Floor" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Room" class="font-weight-bold"></label>
                            <input asp-for="Room" class="form-control"/>
                            <span asp-validation-for="Room" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md-12 text-center">
                            <button type="submit" class="btn btn-success btn-lg mr-2">Add Device</button>
                            <a asp-action="Index" asp-controller="Devices" class="btn btn-secondary btn-lg">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>