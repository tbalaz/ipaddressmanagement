@model IPAddressManagement.Models.Device

@{
    Layout = "_Layout";
    ViewData["Title"] = "Add Device";
}

<div class="content-container">
    <main role="main">
        <h1 class="display-4 mb-4">Add New Device</h1>

        <form asp-action="Index" method="post">
            <div class="row">
                <!-- Left Column -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Hostname" class="form-label">Hostname</label>
                        <input asp-for="Hostname" class="form-control" />
                        <span asp-validation-for="Hostname" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="IPAddress" class="form-label">IP Address</label>
                        <input asp-for="IPAddress" class="form-control" />
                        <span asp-validation-for="IPAddress" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Status" class="form-label">Status</label>
                        <select asp-for="Status" class="form-control">
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                            <option value="Maintenance">Maintenance</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Department" class="form-label">Department</label>
                        <input asp-for="Department" class="form-control" />
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="EquipmentType" class="form-label">Equipment Type</label>
                        <input asp-for="EquipmentType" class="form-control" />
                        <span asp-validation-for="EquipmentType" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Criticality" class="form-label">Criticality</label>
                        <select asp-for="Criticality" class="form-control">
                            <option value="High">High</option>
                            <option value="Medium">Medium</option>
                            <option value="Low">Low</option>
                        </select>
                        <span asp-validation-for="Criticality" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="MACAddress" class="form-label">MAC Address</label>
                        <input asp-for="MACAddress" class="form-control" />
                        <span id="MACAddress-error" asp-validation-for="MACAddress" class="text-danger"></span>
                    </div>

                </div>
            </div>

            <!-- Location Section -->
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="City" class="form-label">City</label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="PostalCode" class="form-label">Postal Code</label>
                        <input asp-for="PostalCode" class="form-control" />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="Street" class="form-label">Street</label>
                        <input asp-for="Street" class="form-control" />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Building, Floor, Room -->
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="Building" class="form-label">Building</label>
                        <input asp-for="Building" class="form-control" />
                        <span asp-validation-for="Building" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="Floor" class="form-label">Floor</label>
                        <input asp-for="Floor" type="number" class="form-control" />
                        <span asp-validation-for="Floor" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="Room" class="form-label">Room</label>
                        <input asp-for="Room" class="form-control" />
                        <span asp-validation-for="Room" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Add Device</button>
                <a href="@Url.Action("Index", "Devices")" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </main>
</div>